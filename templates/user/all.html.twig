{% extends 'layout/main.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('plugins/toastr/toastr.min.css') }}">
{% endblock %}
{% block content %}
    {% apply spaceless %}
    {% set menu = convert_to_menu(context) %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="float-right col-7">
                        <div class="input-group input-group col-10 float-left">
                            <input type="text" name="table_search" id="sasSearchValue" class="form-control float-right" placeholder="{{ 'sas.table.action.search' | trans }}">
                            <div class="input-group-append">
                                <button type="submit" id="sasSearch" class="btn btn-default"><i class="fas fa-search"></i> {{ 'sas.table.action.search' | trans }}</button>
                            </div>
                        </div>
                        <div class="float-right col-2">
                            {% if is_granted('add', menu) %}
                                <a href="{{ path('kejawenlab_apiskeleton_admin_user_post__invoke') }}" class="btn btn-success float-right">{{ 'sas.table.action.add' | trans }}</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="card-body table-responsive p-0">
                    <table class="table table-striped table-hover text-nowrap">
                        <thead>
                        <tr>
                            <th>No</th>
                            <th>{{ 'sas.table.column.user.group' | trans }}</th>
                            <th>{{ 'sas.table.column.user.supervisor' | trans }}</th>
                            <th>{{ 'sas.table.column.user.username' | trans }}</th>
                            <th>{{ 'sas.table.column.user.fullName' | trans }}</th>
                            <th>{{ 'sas.table.column.user.email' | trans }}</th>
                            <th style="width: 149px;">{{ 'sas.table.column.action' | trans }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for key, user in paginator['items'] %}
                            <tr>
                                <td>{{ (key + 1) + (paginator['per_page'] * (paginator['page'] - 1)) }}</td>
                                <td>{% if user.group is not null %}{{ user.group.name ~ ' (' ~ user.group.code ~ ')' }}{% endif %}</td>
                                <td>{% if user.supervisor is not null %}{{ user.supervisor.fullName ~ ' (' ~ user.supervisor.username ~ ')' }}{% endif %}</td>
                                <td>{{ user.username }}</td>
                                <td>{{ user.fullName }}</td>
                                <td>{{ user.email }}</td>
                                <td>
                                    <a href="{{ path('kejawenlab_apiskeleton_admin_user_get__invoke', {id: user.id}) }}" class="btn btn-sm btn-default">{{ 'sas.table.action.view' | trans }}</a>
                                    {% if is_granted('edit', menu) %}
                                        <a href="{{ path('kejawenlab_apiskeleton_admin_user_put__invoke', {id: user.id}) }}" class="btn btn-sm btn-warning ml-1">{{ 'sas.table.action.edit' | trans }}</a>
                                    {% endif %}
                                    {% if is_granted('delete', menu) %}
                                        <button type="button" data-path="{{ path('kejawenlab_apiskeleton_admin_user_delete__invoke', {id: user.id}) }}" data-notification="{{ 'sas.notification.delete.message' | trans({'%data%': user.username}) }}" class="btn btn-sm btn-danger ml-1 delete" data-toggle="modal" data-target="#sasDeleteModal">
                                            {{ 'sas.table.action.delete' | trans }}
                                        </button>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="card-footer clearfix">
                    {% include 'layout/pagination.html.twig' with {paginator: paginator} %}
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="sasDeleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">{{ 'sas.notification.delete.title' | trans }}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <input type="hidden" id="sasPath" value="" />
                </div>
                <div class="modal-body" id="sasNotification"></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ 'sas.notification.delete.cancel' | trans }}</button>
                    <button type="button" id="sasDeleteConfirm" class="btn btn-primary">{{ 'sas.notification.delete.confirm' | trans }}</button>
                </div>
            </div>
        </div>
    </div>
    {% endapply %}
{% endblock %}
{% block javascripts %}
    {% apply spaceless %}
        <script src="{{ asset('plugins/toastr/toastr.min.js') }}"></script>
        <script>
            $(document).ready(function () {
                toastr.options = {
                    "closeButton": false,
                    "debug": false,
                    "newestOnTop": false,
                    "progressBar": false,
                    "positionClass": "toast-top-center",
                    "preventDuplicates": false,
                    "onclick": null,
                    "showDuration": "300",
                    "hideDuration": "1000",
                    "timeOut": "5000",
                    "extendedTimeOut": "1000",
                    "showEasing": "swing",
                    "hideEasing": "linear",
                    "showMethod": "fadeIn",
                    "hideMethod": "fadeOut"
                };

                $('#sasSearchValue').val(getParameterByName('q'));

                $('.delete').on('click', function() {
                    $('#sasPath').val($(this).data('path'));
                    $('#sasNotification').html($(this).data('notification'));
                });

                $('#sasDeleteConfirm').on('click', function() {
                    window.location.href = $('#sasPath').val();
                });

                $('#sasSearch').on('click', function () {
                    window.location.href = '{{ path('kejawenlab_apiskeleton_admin_user_getall__invoke') }}?q=' + $('#sasSearchValue').val();
                });

                {% for message in app.flashes('info') %}
                    toastr['success']('{{ message | trans }}');
                {% endfor %}
                {% for message in app.flashes('error') %}
                    toastr['error']('{{ message | trans }}');
                {% endfor %}
            });
        </script>
    {% endapply %}
{% endblock %}
