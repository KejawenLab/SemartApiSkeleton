{% apply spaceless %}
    <ul class="navbar-nav ml-auto">
        <li class="nav-item dropdown user user-menu">
            {% set user = app.user %}
            <a href="#" class="nav-link" data-toggle="dropdown">
                <img src="{{ asset('dist/img/avatar5.png') }}" class="user-image" alt="{{ user.username | humanize }}">
                <span id="sas_user_hidden" class="hidden-xs">{{ user.username | humanize }}</span>
            </a>
            <ul class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                <li class="user-header">
                    <img src="{{ asset('dist/img/avatar5.png') }}" class="img-circle" alt="{{ user.username | humanize }}">
                    <p id="sas_user_name">{{ user.username | humanize }}<small>{{ user.group.name }}</small></p>
                </li>
                <li class="user-footer col-md-12">
                    <div class="float-left">
                        <a href="{{ path('kejawenlab_apiskeleton_admin_me_profile__invoke') }}" class="btn btn-default btn-flat">Profil</a>
                    </div>
                    <div class="float-right">
                        <a href="{{ path('admin_logout') }}" class="btn btn-default btn-flat">Keluar</a>
                    </div>
                </li>
            </ul>
        </li>
    </ul>
{% endapply %}
