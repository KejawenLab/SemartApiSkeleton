{% extends 'layout/main.html.twig' %}

{% block stylesheets %}{% endblock %}
{% block content %}
    {% apply spaceless %}
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body table-responsive p-0">
                        {% if audits is defined %}
                            <table class="table table-striped table-hover text-nowrap">
                                <thead>
                                <tr>
                                    <th>{{ 'sas.table.column.audit.type' | trans }}</th>
                                    <th>{{ 'sas.table.column.audit.userId' | trans }}</th>
                                    <th>{{ 'sas.table.column.audit.username' | trans }}</th>
                                    <th>{{ 'sas.table.column.audit.ipAddress' | trans }}</th>
                                    <th>{{ 'sas.table.column.audit.data' | trans }}</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for key, audit in audits %}
                                    <tr>
                                        <td>{{ audit['type'] | upper }}</td>
                                        <td>{{ audit['user_id'] }}</td>
                                        <td>{{ audit['username'] }}</td>
                                        <td>{{ audit['ip_address'] }}</td>
                                        <td>{{ dump_audit_log(audit['data']) }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        {% endif %}
                    </div>
                    <div class="card-footer">
                        {% if audits is not defined and can_view_audit() %}
                            <a href="{{ path('kejawenlab_apiskeleton_admin_apiclient_audit__invoke', {id: data.id}) }}" class="btn btn-info">{{ 'sas.form.action.audit' | trans }}</a>
                        {% endif %}
                        <a href="{{ path('kejawenlab_apiskeleton_admin_apiclient_getall__invoke') }}" class="btn btn-warning ml-1">{{ 'sas.form.action.back' | trans }}</a>
                    </div>
                </div>
            </div>
        </div>
    {% endapply %}
{% endblock %}
{% block javascripts %}{% endblock %}
